<div>
  <%= link_to 'Restaurant', admin_restaurants_path %> |
  <%= link_to 'Categories', admin_categories_path %>
</div>
<h1>餐廳後台</h1>
<table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th class="col-sm-2">Category</th>
        <th class="col-sm-2">Name</th>
        <th class="col-sm-2">Tel</th>
        <th class="col-sm-2">Opening Hours</th>
        <th class="col-sm-2">Update At</th>
        <th class="col-sm-1">
                <%= link_to '<span class="glyphicon glyphicon-plus"></span>'.html_safe, new_admin_restaurant_path, class:"btn btn-success btn-sm pull-right" %>
            </th>
        <th class="col-sm-1"></th>
        <th class="col-sm-1"></th>
      </tr>
    </thead>
  <% @restaurants.each_with_index do |restaurant, index| %>
  <tr>
    <th scope="row"><%= restaurant.id %></th>
    <td>[<%= restaurant.category.name %>]</td>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.tel %></td>
    <td><%= restaurant.opening_hours %></td>
    <td><%= restaurant.updated_at %></td>
    <td><%= link_to '<span class="glyphicon glyphicon-eye-open"></span>'.html_safe, admin_restaurant_path(restaurant), class:"btn btn-primary btn-sm pull-right" %></td>
    <td><td><%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_admin_restaurant_path(restaurant), class:"btn btn-warning btn-sm" %></td>
    <td><%= link_to '<span class="glyphicon glyphicon glyphicon-trash"></span>'.html_safe, admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"}, class:"btn btn-danger btn-sm" %></td>
  </tr>
  <% end %>
</table>
<%= paginate @restaurants %>
