

    <form class="form-horizontal col-sm-6">
        <div class="form-group">
            <div class="col-sm-8">
                <h1><%= @restaurant.name %></h1>
                <h4>[<%= @restaurant.category.name %>]</h4>
            </div>
        </div>
        <div class="form-group">
            <%= label :name, "Opening Hours", class: "col-sm-2 control-label" %>
            <div class="col-sm-8">
                <%= @restaurant.opening_hours %>
            </div>
        </div>
        <div class="form-group">
            <%= label :name, "Telephone", class: "col-sm-2 control-label" %>
            <div class="col-sm-8">
                <%= @restaurant.tel %>
            </div>
        </div>
        <div class="form-group">
            <%= label :name, "Address", class: "col-sm-2 control-label" %>
            <div class="col-sm-8">
                <%= @restaurant.address %>
            </div>
        </div>
        <div class="form-group">
            <%= label :name, "Description", class: "col-sm-2 control-label" %>
            <div class="col-sm-8">
                <%= @restaurant.description %>
            </div>
        </div>
    </form>
    <div class="col-sm-6">
        <%= image_tag @restaurant.image, width: '600px' if @restaurant.image? %>
    </div>

<%= link_to 'Back to index', admin_restaurants_path %>
